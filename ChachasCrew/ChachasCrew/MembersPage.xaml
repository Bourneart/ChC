        HorizontalOptions="Center" 
        VerticalOptions="Center" 
        Grid.Row="1" 
        Grid.Column="1" 
        FontSize="Medium" 
        FontAttributes="Italic"/>
            </Grid>
            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image 
        WidthRequest="100" 
        HeightRequest="100" 
        Aspect="AspectFit" 
        Source="DimaL.png" 
        HorizontalOptions="Center" 
        VerticalOptions="Center" 
        Grid.Row="0" 
        Grid.Column="0" 
        Grid.RowSpan="2"/>
